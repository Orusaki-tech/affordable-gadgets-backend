# M-Pesa Configuration
# Get these from https://developer.safaricom.co.ke/

# Sandbox Credentials (for testing)
MPESA_CONSUMER_KEY=your_consumer_key_here
MPESA_CONSUMER_SECRET=your_consumer_secret_here
MPESA_PASSKEY=your_passkey_here
MPESA_SHORTCODE=174379
MPESA_CALLBACK_URL=https://yourdomain.com/api/inventory/mpesa/callback/
MPESA_ENVIRONMENT=sandbox

# Optional: Advanced M-Pesa Settings
MPESA_API_TIMEOUT=30
MPESA_MAX_RETRIES=3
MPESA_HEALTH_CHECK_INTERVAL=300

# For Refunds (B2C)
MPESA_INITIATOR_NAME=testapi
MPESA_SECURITY_CREDENTIAL=your_security_credential_here

# Email Settings
DEFAULT_FROM_EMAIL=noreply@yourdomain.com
EMAIL_BACKEND=store.email_backend.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@yourdomain.com
EMAIL_HOST_PASSWORD=your_email_password
EMAIL_TIMEOUT=10
EMAIL_SSL_CA_FILE=
EMAIL_TLS_ALLOW_INVALID_CERTS=False

# Twilio Settings
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_WHATSAPP_FROM=whatsapp:+14155238886
TWILIO_SMS_FROM=+15551234567
TWILIO_TIMEOUT=10
# Database
# Leave DATABASE_URL empty to use SQLite (db.sqlite3).
#
# Local Homebrew Postgres (after creating user + DB — see project README or docs):
# DATABASE_URL=postgresql://affordable:affordable@localhost:5432/affordable_gadgets
#
# Local Docker Postgres (run: docker compose up -d, then migrate: python manage.py migrate):
# DATABASE_URL=postgresql://affordable:affordable@localhost:5432/affordable_gadgets
#
# Supabase / production (use your project URL; URL-encode @ in password):
# DATABASE_URL=postgresql://postgres.PROJECT_REF:PASSWORD@aws-1-eu-central-1.pooler.supabase.com:5432/postgres
DATABASE_URL=

# Optional: individual DB_* variables (used if DATABASE_URL is not set)
DB_HOST=
DB_NAME=
DB_USER=
DB_PASSWORD=
DB_PORT=5432

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
DJANGO_ENV=development
ALLOWED_HOSTS=localhost,127.0.0.1

# Cloudinary Configuration (for media and static files)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Django Silk (Performance Profiling) — uses same DB as Django (Postgres or SQLite)
# Set to 'true' to enable Silk profiling UI at /silk/ (staff-only). For local dev: SILKY_ENABLED=true
SILKY_ENABLED=false
# Percent of requests to intercept (1-100). Use 100 in local dev to profile every request.
SILKY_INTERCEPT_PERCENT=10

# Pesapal Payment Gateway
PESAPAL_CONSUMER_KEY=your_pesapal_consumer_key
PESAPAL_CONSUMER_SECRET=your_pesapal_consumer_secret
PESAPAL_ENVIRONMENT=sandbox
PESAPAL_CALLBACK_URL=https://yourdomain.com/payment/callback/
PESAPAL_IPN_URL=https://your-api-domain.com/api/inventory/pesapal/ipn/

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Frontend Base URL (for email verification links, etc.)
FRONTEND_BASE_URL=http://localhost:3000
